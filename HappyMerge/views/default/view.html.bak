{{extend 'layout.html'}}

<script src="http://maps.google.com/maps/api/js?sensor=true"></script>
<script src="{{=URL('static','js/gmaps.js')}}"></script>
<style>
    #basic_info {
        width:28%;
        float:left;
        font-size: 1.2em;
        font-weight: 300;
        text-align: right;
        padding-right: 1%;
        margin-top: 30px;
        background-color: white; 
        border: 2px solid white; 
        border-radius: 5px
    }
</style>
<script>
$(document).ready(function(){
  map = new GMaps({
    div: '#map',
    lat: {{=latitude}},
    lng: {{=longitude}},
    panControl : false,
  });

   map.addMarker({
    lat: {{=latitude}},
    lng: {{=longitude}},
    title: 'Here!',
    infoWindow: {
                 content: '<b>{{=restaurant_name}}</b><br/>{{=restaurant_address}}<br/>{{=restaurant_city}}, {{=restaurant_state}} {{=restaurant_zip}}'
    }
  });
});
</script>

<h1 style="background-color: white; border: 2px solid white; border-radius: 5px;">
    {{=restaurant_name}}
</h1>
<div id="basic_info">
    <hr/>
<div style="float: left;background-color: white; border: 2px solid white; border-radius: 5px;">Address:</div>
    {{=restaurant_address}}<br/>
    {{=restaurant_city}}, 
    {{=restaurant_state}} 
    {{=restaurant_zip}}<br/><br/><hr/>
    <div style="float: left;background-color: white; border: 2px solid white; border-radius: 5px;">Happy Hours: </div>{{=restaurant_hours}}<br/><br/><hr/>
    <div style="float: left;background-color: white; border: 2px solid white; border-radius: 5px;">Phone: </div>
    {{=restaurant_phone}}<br/><br/><hr/>

<p>
    {{=A('Back', _class='btn', _href=URL('default', 'index'))}}
    {{=A('Edit', _class='btn', _href=URL('default', 'edit', args=[restaurant_id]))}}
</p>
</div>
<div id="map" style="height: 380px; width: 70%; float: right; margin-top: 35px;"></div>

{{pass}}
<br />
